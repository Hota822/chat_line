                        <li><%= link_to "Friend Request", friendrequest_user_path(current_user) %></li>
                        <li><%= link_to "Friend List" ,friendlist_user_path(current_user) %></li>
                        <li><%= link_to "Friend Serch" ,search_users_path %></li>
                      </ul>
                    </li>
                    <li><%= link_to "Settings", '#' %></li>
                    <li>
                      <%= link_to "Log out", logout_path, method: :delete %>
                    </li>
                  </ul>
                </li>
              </ul>
            <% else %>
              <%= link_to "log in", login_path %>
            <% end %>
          </ul>
          </div>
        </nav>
      </div>

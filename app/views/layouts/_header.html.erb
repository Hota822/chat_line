    <header>
      <div class="top-bar" >
          <%= link_to "Chat like LINE", root_path, id: 'logo' %>
        <nav>
          <div class="top-bar-right">
          <ul class="menu align-right">
            <li><%= link_to "Help", '#' %></li>
            <% if logged_in? %>
              <ul class="dropdown menu" data-dropdown-menu>
                <li><a href="#">Account</a>
                  <ul class="menu">
                    <li><%= link_to "Profile", current_user %></li>
                    <li><%= link_to "Friends", '#' %>
